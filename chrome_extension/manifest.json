{
  "manifest_version": 2,
  "name": "AWS AD credentials fetcher",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "*://*/*",
    "webRequestBlocking",
    "downloads",
    "tabs",
    "contentSettings"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js",
      "aws-sdk-2.503.min.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://login.microsoftonline.com/common/oauth2/authorize*"],
      "js": ["select_user.js"]
    },
    {
      "matches": ["https://account.activedirectory.windowsazure.com/*"],
      "js": ["select_app.js"]
    }
  ]
}
